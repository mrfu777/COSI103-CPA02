<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>cs103a-cpa02</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" >
</head>
<body>
    <div class="container">
        <p class="display-4 text-center mt-5">TodoList</p>
        <form class="input-group mb-3" method="post" action="/todos">
            <input type="text" name="todo" class="form-control" placeholder="Enter your todo..." aria-label="Recipient's username" aria-describedby="basic-addon2">
            <button type="submit" class="input-group-text btn btn-primary btn-lg" >Create</button>
        </form>
        <ul class="list-group">
            <% for (let i = 0; i < todos.length; i ++) {%>
                <li class="list-group-item d-flex justify-content-between">
                    <span>
                        <%= todos[i].todo %>
                    </span>
                    <div class="form-check">
                        <input <%= todos[i].done ? 'checked' : '' %> onchange="handleClickDone(this)" data-todoid=<%= todos[i]._id%> id=<%="todo" + (i + 1) %> class="form-check-input" <%= todos[i].done ? 'disabled' : ''%> type="checkbox" value="">
                        <label for=<%="todo" + (i + 1) %> class="form-check-label" >
                            <%= todos[i].done ? '' : 'Done' %>
                        </label>
                    </div>
                </li>
            <%}%>

        </ul>
    </div>
    <script src="/script.js"></script>
</body>
</html>